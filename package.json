{
    "name": "meteor",
    "private": true,
    "scripts": {
        "start": "meteor run",
        "start:desktop": "meteor-desktop -b",
        "start:android": "meteor run android-device",
        "build": "npm run clean; meteor build --directory dist --server=https://localhost:3000",
        "build:desktop": "npm run clean; meteor-desktop build-installer -b",
        "clean": "shx rm -rf dist",
        "test:lint": "eslint --fix --cache \"src/**/*.{js,jsx,ts,tsx}\"",
        "test:quick": "run-p --aggregate-output test:lint",
        "test": "run-p --aggregate-output clean build test:*",
        "docs": "npx jsdoc -c .jsdoc.json src/**/* -d docs",
        "visualize": "meteor --production --extra-packages bundle-visualizer",
        "desktop": "meteor-desktop",
        "deps": "npm-check -u"
    },
    "dependencies": {
        "@babakness/exhaustive-type-checking": "^0.1.3",
        "@babel/runtime": "^7.12.1",
        "@commitlint/config-conventional": "^11.0.0",
        "@sinclair/typebox": "^0.10.1",
        "@types/meteor": "^1.4.62",
        "@types/meteor-universe-i18n": "^1.14.5",
        "@types/react": "^16.9.55",
        "@types/react-dom": "^16.9.9",
        "@types/react-router-dom": "^5.1.6",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "ajv": "^6.12.6",
        "bcrypt": "^5.0.0",
        "better-docs": "^2.3.2",
        "commitlint": "^11.0.0",
        "date-fns": "^2.16.1",
        "electron-packager": "^15.1.0",
        "eslint": "^7.12.1",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-config-import": "^0.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-sonarjs": "^0.5.0",
        "eslint_d": "^9.1.2",
        "fp-ts": "^2.8.5",
        "husky": "^4.3.0",
        "io-ts-codegen": "^0.4.5",
        "meteor": "meteor/meteor",
        "meteor-node-stubs": "^1.0.1",
        "normalize.css": "^8.0.1",
        "npm-check": "^5.9.2",
        "npm-run-all": "^4.1.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "run-p": "^0.0.0",
        "run-s": "^0.0.0",
        "shx": "^0.3.3",
        "uniform": "^0.5.1",
        "uniforms-bridge-json-schema": "^3.0.0-rc.5",
        "uniforms-unstyled": "^3.0.0-rc.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-p test:quick",
            "pre-push": "run-p test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "meteor": {
        "mainModule": {
            "client": "src/client/index.tsx",
            "server": "src/server/index.ts"
        },
        "testModule": "tests/main.js"
    },
    "devDependencies": {
        "electron": "6.1.7",
        "electron-builder": "21.2.0",
        "eslint-plugin-meteor": "^7.2.1",
        "meteor-desktop": "^2.2.5"
    }
}
